<div class="container">
  <div class="row">
  <div class="text-center"><h2 class="card-title text-center"><%= @forum_thread.subject %></h2></div>
  <div class="col-md-12"> 
        <% @forum_thread.forum_posts.each do |post| %>
          <div class="card" style="width: 100%">
            <div class="card-body">
              <%= post.body %>
              created <%= time_ago_in_words(post.created_at) %> by <%= post.user.name.full %>
            </div>
          </div>
        <% end %>
  </div>
  </div>
</div>